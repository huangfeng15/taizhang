# ==========================================
# 生产环境配置模板
# ==========================================
# 使用说明: 复制此文件为 .env.prod 并修改相应配置

# 环境标识
DJANGO_ENV=production

# Django基础配置
DJANGO_SECRET_KEY=CHANGE-THIS-SECRET-KEY-IN-PRODUCTION-ENVIRONMENT-USE-STRONG-RANDOM-STRING
DJANGO_DEBUG=False

# 数据库配置 (保持原有命名)
DATABASE_NAME=db.sqlite3

# 网络配置 (HTTPS, 局域网访问)
USE_HTTPS=True
SERVER_HOST=0.0.0.0
SERVER_PORT=3500
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,10.168.3.240

# SSL证书路径
SSL_CERT_FILE=ssl_certs/server.crt
SSL_KEY_FILE=ssl_certs/server.key

# 安全配置 (生产环境 - 根据实际情况调整)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CSRF信任源 (HTTPS)
CSRF_TRUSTED_ORIGINS=https://127.0.0.1:3500,https://localhost:3500,https://10.168.3.240:3500

# 国际化
LANGUAGE_CODE=zh-hans
TIME_ZONE=Asia/Shanghai

# 日志级别
LOG_LEVEL=INFO

# 业务配置
SYSTEM_BASE_YEAR=2019
SYSTEM_YEAR_WINDOW=1
MONITOR_START_DATE=2025-10-01

# 备份配置
BACKUP_RETENTION_DAYS=30