# ==========================================
# 开发环境配置 (HTTP - 无证书)
# ==========================================

# 环境标识
DJANGO_ENV=development

# Django基础配置
DJANGO_SECRET_KEY=dev-secret-key-for-development-only-change-in-production
DJANGO_DEBUG=True

# 数据库配置
DATABASE_NAME=db_dev.sqlite3

# 网络配置 (HTTP, 支持局域网访问)
USE_HTTPS=False
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,10.168.3.240,*

# 安全配置 (开发环境宽松)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CSRF信任源 (HTTP)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000,http://10.168.3.240:8000

# 国际化
LANGUAGE_CODE=zh-hans
TIME_ZONE=Asia/Shanghai

# 日志级别
LOG_LEVEL=DEBUG

# 业务配置
SYSTEM_BASE_YEAR=2019
SYSTEM_YEAR_WINDOW=1
MONITOR_START_DATE=2025-10-01

# 备份配置
BACKUP_RETENTION_DAYS=7